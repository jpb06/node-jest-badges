{
  "name": "node-jest-badges",
  "description": "Generating coverage badges from jest",
  "version": "1.3.3",
  "main": "index.js",
  "repository": "https://github.com/jpb06/node-jest-badges.git",
  "author": "jpb06 <jpb.06@outlook.com>",
  "bin": {
    "generateBadges": "./cli/generateBadges.cli.js"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^0.27.2",
    "fs-extra": "^10.1.0"
  },
  "devDependencies": {
    "@jest/types": "^28.1.3",
    "@swc/core": "^1.2.215",
    "@swc/jest": "^0.2.21",
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "copyfiles": "^2.4.1",
    "del-cli": "^4.0.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "jest-watch-typeahead": "^2.0.0",
    "prettier": "^2.7.1",
    "readme-package-icons": "^1.0.6",
    "ts-node": "^10.9.1",
    "ts-paths-transform": "^1.0.4",
    "tsconfig-paths": "^4.0.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "copy-package": "copyfiles package.json ./dist/",
    "copy-readme": "copyfiles README.md ./dist/",
    "type-check": "tsc --project tsconfig.prod.json --noEmit",
    "build": "del-cli ./dist && tsc --project tsconfig.prod.json && tscpaths -p tsconfig.prod.json -s ./src -o ./dist",
    "postbuild": "yarn copy-package && yarn copy-readme",
    "cli": "node ./dist/cli/generateBadges.cli.js",
    "dev": "ts-node -r tsconfig-paths/register ./src/tests-related/generate.ts",
    "lint": "eslint ./src",
    "test": "jest",
    "test-changes": "jest --watch",
    "test-dev": "jest --watchAll --coverage --no-cache",
    "test-ci": "jest --ci --coverage",
    "sync-icons": "yarn generateReadmeIcons -h 70"
  }
}
