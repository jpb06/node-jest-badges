{
  "name": "node-jest-badges",
  "description": "Generating coverage badges from jest",
  "version": "1.3.0",
  "main": "index.js",
  "repository": "https://github.com/jpb06/node-jest-badges.git",
  "author": "jpb06 <jpb.06@outlook.com>",
  "bin": {
    "generateBadges": "./cli/generateBadges.cli.js"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^0.24.0",
    "fs-extra": "^10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^4.0.1",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.5",
    "jest-watch-typeahead": "^1.0.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "copy-package": "copyfiles package.json ./dist/",
    "copy-readme": "copyfiles README.md ./dist/",
    "build:dry-run": "tsc --project tsconfig.prod.json --noEmit",
    "build": "del-cli ./dist && tsc --project tsconfig.prod.json && tscpaths -p tsconfig.prod.json -s ./src -o ./dist",
    "postbuild": "yarn copy-package && yarn copy-readme",
    "cli": "node ./dist/cli/generateBadges.cli.js",
    "dev": "ts-node -r tsconfig-paths/register ./src/tests-related/generate.ts",
    "lint": "eslint ./src",
    "test": "jest --watch",
    "test:dev": "jest --watchAll --coverage --no-cache",
    "test:ci": "jest --ci --coverage"
  }
}
