{
  "name": "node-jest-badges",
  "version": "1.0.17",
  "description": "Generating coverage badges from jest",
  "main": "index.js",
  "repository": "https://github.com/jpb06/node-jest-badges.git",
  "author": "jpb06 <jpb.06@outlook.com>",
  "bin": {
    "generateBadges": "./cli/generateBadges.cli.js"
  },
  "license": "MIT",
  "scripts": {
    "copy-package": "copyfiles package.json ./dist/",
    "copy-badges": "copyfiles ./badges/* ./dist/",
    "copy-readme": "copyfiles README.md ./dist/",
    "build": "tsc --project tsconfig.prod.json && tscpaths -p tsconfig.prod.json -s ./src -o ./dist",
    "postbuild": "pnpm copy-package && pnpm copy-badges && pnpm copy-readme",
    "dev": "ts-node -r tsconfig-paths/register ./src/tests-related/generate.ts",
    "test": "jest",
    "test:dev": "jest --watchAll --coverage",
    "test:ci": "jest --runInBand --ci --collectCoverage"
  },
  "dependencies": {
    "fs-extra": "^9.1.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.14",
    "@types/fs-extra": "^9.0.8",
    "@types/glob": "^7.1.3",
    "@types/graceful-fs": "^4.1.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/node-fetch": "^2.5.8",
    "@types/normalize-package-data": "^2.4.0",
    "@types/prettier": "^2.2.3",
    "@types/stack-utils": "^2.0.0",
    "copyfiles": "^2.4.1",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "mime-types": "^2.1.30",
    "prettier": "^2.0.2",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.2.2"
  }
}
